<%= render "error" %>

<div class="row">
	<div class="col-md-4 col-md-offset-4">		
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Editing User</h3>
			</div>
			<div class="panel-body">
				<%= form_for @user, class: "col-md-4 col-md-offset-4" do |f|%>
				  <div class="field form-group">
					<%= f.label :email, "E-Mail", class: "sr-only"  %>
					<%= f.email_field :email, {placeholder: "E-Mail", class: "form-control", autofocus: true} %> 
				  </div>
				  <div class="field form-group">
					<%= f.label :first_name, "First Name", class: "sr-only" %>
					<%= f.text_field :first_name, {placeholder: "First Name", class: "form-control"} %>
				  </div>
				  <div class="field form-group">
					<%= f.label :last_name, "Last Name", class: "sr-only" %>
					<%= f.text_field :last_name, {placeholder: "Last Name", class: "form-control"} %>
				  </div>
				  <%= submit_tag "Update Information", class:"btn btn-primary btn-block" %>
				<% end %>
			</div>
		</div>		
	</div>
</div>
