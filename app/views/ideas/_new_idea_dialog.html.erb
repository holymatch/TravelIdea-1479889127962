<div id="add_idea" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<%= form_for @idea, url: {controller: "ideas", action: form_action, format: 'json'}, method: form_method, class: "col-md-4 col-md-offset-4", remote: true, html: {'data-model': 'idea'}  do |f|%>
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="gridSystemModalLabel">New Idea</h4>
				</div>
				<div class="modal-body">
					<div id="error_explanation" class="hidden">
					</div>
					<div class="row">
						<div class="col-md-8 col-md-offset-2">
							<%= f.hidden_field :user_id %>
							<div class="field form-group">
							<%= f.label :title, "Title", class: "sr-only"  %>
							<%= f.text_field :title, {placeholder: "Title", class: "form-control", required: true} %> 
							</div>
							<div class="field form-group">
							<%= f.label :destination, "Destination", class: "sr-only" %>
							<%= f.text_field :destination, {placeholder: "Destination", class: "form-control", required: true} %>
							</div>
							<div class="field form-group">
							<%= f.label :start_date, "Start Date", class: "sr-only" %>
							<%= f.date_select :start_date, {placeholder: "Start Date", class: "form-control", required: true} %>
							</div>
							<div class="field form-group">
							<%= f.label :end_date, "end_date", class: "sr-only" %>
							<%= f.date_select :end_date, {placeholder: "End Date", class: "form-control", required: true} %>
							</div>
							<div class="field form-group">
							<%= f.label :tags, "Tags", class: "sr-only" %>
							<%= f.text_field :tags, {placeholder: "Tags", class: "form-control"} %>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<%= f.submit "New Idea", class:"btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

