<p id="notice"><%= notice %></p>

<%= render 'error_message', idea: @idea %>

<div class="row">
	<%= render 'new_idea_dialog', idea: @idea, form_action: "create", form_method: "post", collapse: true %>
	<% @ideas.each do |idea| %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<%= link_to(idea,class: "panel-link") do %>
					<h3 class="panel-title pull-left"><%= idea.title %></h3>
					<% end %>
				</div>
				<div class="panel-body">
					<%= render "common/form_control_static_item", :label => "Title", :text => fullusername(idea.user) %>
					<%= render "common/form_control_static_item", :label => "Destination", :text => idea.destination %>
					<%= render "common/form_control_static_item", :label => "Start Date", :text => idea.start_date %>
					<%= render "common/form_control_static_item", :label => "End Date", :text => idea.end_date %>
					<span><%= idea.tags %></span>
				</div>
			</div>			
		</div>
	<% end %>
</div>