<li>
	<%= form_tag({controller: "ideas", action: "index"}, method: "get", class: "navbar-form navbar-left", role: "search") do %>
		<div class="input-group form-group">
			<% if current_page?(controller: 'ideas', action: 'index') %>
				<div class="input-group-btn">
					<a href="#add_idea" class="btn btn-default" data-toggle="modal" title="New Idea"><span class="glyphicon glyphicon-plus"></span></a>
				</div>
			<% end %>
			<%= search_field_tag "search", nil, class: "form-control", placeholder: "Search for idea", name: "keyword" %>
			<div class="input-group-btn">
				<button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search" title="Search"></span></button>
			</div>
		</div>
	<% end %>
</li>